{
  "compilerOptions": {
    "target": "ES2022",
    "module": "ESNext",
    "moduleResolution": "bundler",
    "lib": ["ES2022"],
    "strict": true,
    "declaration": true,
    "declarationMap": true,
    "sourceMap": true,
    "outDir": "dist",
    "esModuleInterop": true,
    "skipLibCheck": true,
    "resolveJsonModule": true,
    "allowImportingTsExtensions": false,
    "paths": {
      "@a3stack/identity": ["./packages/identity/src/index.ts"],
      "@a3stack/accounts": ["./packages/accounts/src/index.ts"],
      "@a3stack/payments": ["./packages/payments/src/index.ts"],
      "@a3stack/data": ["./packages/data/src/index.ts"],
      "@a3stack/core": ["./packages/core/src/index.ts"]
    }
  },
  "include": ["packages/*/src/**/*"],
  "exclude": ["node_modules", "dist", "**/*.test.ts"]
}
